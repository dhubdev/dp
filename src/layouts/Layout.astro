	</head>
	<body class="bg-lightpaper dark:bg-background prose dark:prose-invert">
		<ModeWatcher client:load />
		<Header />
		<section>
			<slot />
		</section>
		<Footer />
		<ToasterComponent client:load />
		<BottomBar client:load />
	</body>
</html>
