		<meta property="twitter:url" content="https://www.dhubproperty.co.uk/" />
		<meta property="twitter:title" content="DHUB Property" />
		<meta
			property="twitter:description"
			content="Your premier destination for housing solutionts"
		/>
		<meta
			property="twitter:image"
			content="https://dhub-property.vercel.app/screenshot-wide.webp"
		/>

		<!-- Meta Tags Generated with https://metatags.io -->
		<meta name="generator" content={Astro.generator} />
