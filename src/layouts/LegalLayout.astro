---
import Layout from "./Layout.astro";
import Hero from "$lib/components/astro/Hero.astro";

interface Frontmatter {
  title: string;
  active: boolean;
  caption: string;
}

interface Props {
  frontmatter: Frontmatter;
}

const { frontmatter } = Astro.props as Props;
const { title, caption } = frontmatter;

---

<Layout title={title}>
  <section class="flex flex-col gap-4 w-full center">
		<Hero
			title={title}
			subline={caption}
		/>
    <slot />
  </section>
</Layout>
